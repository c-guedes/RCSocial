<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="caique.rcsocial">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".HomePadrao">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity
            android:name=".EsqueciSenha"
            android:label="@string/title_activity_esqueci_senha" />
        <activity android:name=".PrimeiroCadastro" />
        <activity
            android:name=".FazCadastro"
            android:label="@string/title_activity_faz_cadastro"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AlimentacaoEscolar"
            android:label="@string/title_activity_alimentacao_escolar"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>